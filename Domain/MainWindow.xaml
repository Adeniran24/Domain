<Window x:Class="Domain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Domain" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <DataGrid x:Name="dgDomains"
                  Grid.Column="0"
                  AutoGenerateColumns="True"
                  Margin="0,0,10,0"
                  />

        
        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch">

            <TextBlock Text="Domain-name:" Margin="0,0,0,5"/>
            <TextBox x:Name="tbDomain" Margin="0,0,0,15"/>

            <TextBlock Text="IP cím:" Margin="0,0,0,5"/>
            <TextBox x:Name="tbIp" Margin="0,0,0,15"/>

            <Button x:Name="btnBevitel"
                    Content="Bevitel"
                    Margin="0,0,0,10"
                    Click="btnBevitel_Click"/>

            <Button x:Name="btnMentes"
                    Content="Mentés"
                    Click="btnMentes_Click"/>
        </StackPanel>
    </Grid>
</Window>
